# -----------------------------------------------------------------------------
# EditorConfig â€” project-wide defaults
# -----------------------------------------------------------------------------
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# -----------------------------------------------------------------------------
# Shell scripts
# -----------------------------------------------------------------------------
[*.{sh,bash}]
indent_size = 2

# -----------------------------------------------------------------------------
# YAML / Task / CI
# -----------------------------------------------------------------------------
[*.{yml,yaml}]
indent_size = 2

[Taskfile.yml]
indent_size = 2

# -----------------------------------------------------------------------------
# JSON / TOML
# -----------------------------------------------------------------------------
[*.{json,toml}]
indent_size = 2

# -----------------------------------------------------------------------------
# Common config / env files
# -----------------------------------------------------------------------------
[*.{env,ini,conf,config}]
indent_size = 2

# -----------------------------------------------------------------------------
# Markdown
# -----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false

# -----------------------------------------------------------------------------
# Makefiles require tabs
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab
